---
import { ManageFeedPage } from "components/ManageFeedPage";
import Layout from "layouts/Layout.astro";
import { getAuthToken } from "utils/getAuthToken";

const token = getAuthToken(Astro.cookies);
---

<Layout title="Manage Feed">
  {token && <ManageFeedPage token={token} client:only="react" />}
</Layout>

<style>
  * {
    text-align: center;
  }

  section {
    text-align: center;
  }
</style>
